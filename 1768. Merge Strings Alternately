/**
 * @param {string} word1
 * @param {string} word2
 * @return {string}
 */
var mergeAlternately = function(word1, word2) {
let merged = "";
 for (let i = 0; i < word1.length || i < word2.length; i++) {
  
        if (i < word1.length)
            merged += word1.charAt(i);
  
        if (i < word2.length)
            merged += word2.charAt(i);
    }
  
    return merged;
};
